FROM python:3.10-slim

WORKDIR /app

# Install system dependencies for sentence-transformers
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY app/ ./app/
COPY utils/ ./utils/
# Create symlinks for backward compatibility
RUN ln -s utils/update_rss_feeds.py update_rss_feeds.py && \
    ln -s utils/update_rss_periodic.py update_rss_periodic.py

# Set environment variables for HuggingFace cache
ENV HF_HOME=/app/.hf_cache
ENV TRANSFORMERS_CACHE=/app/.hf_cache
ENV RAG_DB_PATH=/app/data/rag_database.db

# Create data directory for RAG database
RUN mkdir -p /app/data

CMD ["python", "-m", "app.worker_rag"]
