# ========================================
# Security Configuration
# ========================================

# RabbitMQ credentials (REQUIRED - change from defaults!)
RABBITMQ_USER=admin
RABBITMQ_PASS=your_secure_password_here

# ========================================
# LLM Backend Configuration
# ========================================

# Choose your LLM backend: "ollama" (local) or "openrouter" (cloud API)
# Default: false (uses Ollama)
USE_OPENROUTER=false

# OpenRouter API Key (get free key at https://openrouter.ai/)
# Only needed if USE_OPENROUTER=true
OPENROUTER_API_KEY=

# OpenRouter Model (free models available)
# Recommended: moonshotai/kimi-k2:free (best for Chinese, very fast)
# Alternatives:
#   - qwen/qwen-2-7b-instruct:free (best for Chinese + English)
#   - google/gemma-2-9b-it:free (excellent quality)
#   - meta-llama/llama-3-8b-instruct:free (fast)
#   - mistralai/mistral-7b-instruct:free (good for English)
OPENROUTER_MODEL=moonshotai/kimi-k2:free

# Local Ollama Model (only used if USE_OPENROUTER=false)
OLLAMA_MODEL=qwen2.5:1.5b

# ========================================
# RAG Configuration
# ========================================

# Embedding model for semantic search
EMBEDDING_MODEL=BAAI/bge-m3

# Enable reranking for better search results (recommended)
RAG_USE_RERANK=true
RAG_RERANK_MAX=12

# Minimum similarity score for search results (0.0-1.0)
RAG_MIN_SIMILARITY=0.3

# Maximum number of recent articles to check
RAG_MAX_ARTICLES_TO_CHECK=100

# ========================================
# Enhanced Search Features
# ========================================

# Enable fast query classification (experimental, requires transformers)
# Speeds up routing by 80% but requires ~500MB model download
USE_FAST_CLASSIFIER=false

# Enable multi-query retrieval for better coverage (recommended)
USE_MULTI_QUERY=true

# ========================================
# RSS Feed Configuration
# ========================================

# RSS feeds to monitor (comma-separated)
RSS_FEEDS=https://rthk9.rthk.hk/rthk/news/rss/c_expressnews_clocal.xml,https://rthk9.rthk.hk/rthk/news/rss/c_expressnews_greaterchina.xml,https://rthk9.rthk.hk/rthk/news/rss/c_expressnews_cinternational.xml,https://rthk9.rthk.hk/rthk/news/rss/c_expressnews_cfinance.xml,https://rthk9.rthk.hk/rthk/news/rss/c_expressnews_csport.xml

# Update interval in seconds (default: 3600 = 1 hour)
RSS_UPDATE_INTERVAL=3600

# ========================================
# Performance Tips
# ========================================

# For fastest testing (development):
#   USE_OPENROUTER=true
#   USE_FAST_CLASSIFIER=true
#   USE_MULTI_QUERY=false

# For best quality (production):
#   USE_OPENROUTER=false (use Ollama)
#   USE_FAST_CLASSIFIER=false
#   USE_MULTI_QUERY=true
#   RAG_USE_RERANK=true

# For balanced setup:
#   (use current defaults above)
